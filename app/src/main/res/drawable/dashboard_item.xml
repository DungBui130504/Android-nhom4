<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tạo nền gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#F2EFF4"
                android:endColor="#F2EFF4"
                android:type="linear" />
            <stroke
                android:color="#4CAF50"
                android:width="1dp" />
            <!-- Chỉ sử dụng một thẻ <corners> -->
            <corners
                android:radius="50dp" />
        </shape>
    </item>
</layer-list>