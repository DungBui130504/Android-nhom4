<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái nhấn (pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#67BFBFBF" /> <!-- Màu nền đỏ -->
            <corners android:radius="8dp" /> <!-- Bo góc (tuỳ chọn) -->
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu nền trong suốt -->
        </shape>
    </item>
</selector>
